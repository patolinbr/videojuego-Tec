@model server.Models.Question

@{
    ViewData["Title"] = "Create";
}

<div class="header-background">
    <div class="container-md align-items-end mb-2 h-100 d-flex">
        <div class="row">
            <div class="col">
                <h1 class="display-3" style="color: white"> Crear Pregunta</h1>
            </div>
        </div>
        <div class="row">

        </div>
    </div>
    <div class="container-md pt-2">
        <div class="row">
            <div class="col-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="QuestionText" class="control-label"></label>
                        <input asp-for="QuestionText" class="form-control"/>
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control"/>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <input asp-for="CourseSectionId" type="hidden" value="@ViewData["CourseSectionId"]"/>
                    <br/>
                    <div class="form-group">
                        <a class="btn btn-primary" style="background:#643385;" asp-action="Details" asp-controller="CourseSection" asp-route-id="@ViewData["CourseSectionId"]">Regresar</a>
                        <input type="submit" value="Crear" class="btn btn-primary"style="background:#643385;"/>
                    </div>
                    <br/>
                </form>
            </div>
        </div>
    </div>
</div>