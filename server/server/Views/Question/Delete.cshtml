@model server.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<style>
    h1 {color: #FFFFFF; margin-left:32px; margin-top:128px}
    h3 {color: #FFFFFF; margin-left:32px;}
    back {margin-left:32px}
    card {margin-left:32px}
</style>
    <div class="col-md-12 body">
        <br />
        <h1>@ViewData["Title"]</h1>
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <hr />
   <div class = "col-md-8 card" style="background:#F4F4F4;">
    <br />
    <dl class="row" align="left">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseSection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseSection.CourseSectionID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseID)
        </dd>
    </dl>
    <form asp-action="Delete" align="right">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="background:#643385; margin-right:32px;"/> |
    </form>
    <br />
    </div>
<back>
        <a asp-action="Details" asp-controller="CourseSection" asp-route-id="@Model.CourseSectionId">Regresar</a>
</back>

