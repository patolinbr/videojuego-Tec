@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<bx-header-nav>
@if (SignInManager.IsSignedIn(User))
{
    <bx-header-nav-item href="/Identity/Account/Manage" title="Manage"> Hello @User.Identity?.Name!</bx-header-nav-item>
    <bx-header-nav-item href="/Identity/Account/Logout" title="Logout"> Logout</bx-header-nav-item>
}
else
{
    <bx-header-nav-item href="/Identity/Account/Register">Registro</bx-header-nav-item>
    <bx-header-nav-item href="/Identity/Account/Login">Iniciar sesión</bx-header-nav-item>
}
</bx-header-nav>